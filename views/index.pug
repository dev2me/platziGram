doctype html
html(lang='es')
  head
    meta(charset='UTF-8')
    title Platzigram
    link(href='https://fonts.googleapis.com/css?family=Montserrat|Oleo+Script', rel='stylesheet')
    link(rel='stylesheet', href='app.css')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
  body
    section#main-container
      .container
        .row
          .col.s10.push-s1
            .row
              .col.m5.hide-on-small-only
                img.iphone(src='iphone.png', alt='')
              .col.s12.m7
                .row
                  .signup-box
                    h1.platzigram Platzigram
                    form.signup-form
                      h2 Registrate para ver fotos de tus amigos estudiando en Platzi
                      .section
                        a.btn.btn-fb.hide-on-small-only Iniciar sesi&oacute;n con Facebook
                        |  
                        a.btn.btn-fb.hide-on-med-and-up Iniciar sesi&oacute;n
                      .divider
                      .section
                        input(type='email', name='email', placeholder='Correo Electrónico')
                        |  
                        input(type='text', name='name', placeholder='Nombre completo')
                        |  
                        input(type='text', name='username', placeholder='Nombre de Usuario')
                        |  
                        input(type='password', name='password', placeholder='Contraseña')
                        |  
                        button.btn.waves-effect.waves-light.btn-signup(type='submit') Registrate
                      .row
                        .login-box
                          | &iquest;Tienes una cuenta? 
                          a(href='/signin') Entrar
    footer.site-footer
      .container
        .row
          .col.s12.l3.center-align
            a.dropdown-button.btn.btn-flat(href='#', data-activates='dropdown1') Idioma
            ul#dropdown1.dropdown-content
              li
                a(href='#!') Espa&ntilde;ol
              li
                a(href='#!') Ingl&eacute;s
          .col.s12.l3.push-l6.center-align  &copy; 2016 Platzigram
    script(src='https://code.jquery.com/jquery-3.1.0.min.js', integrity='sha256-cCueBR6CsyA4/9szpPfrX3s49M9vUU5BgtiJj06wt/s=', crossorigin='anonymous')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.7/js/materialize.min.js')
